<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogView"
        android:background="@drawable/round_cornors"
        android:layout_width="0dp"
        android:elevation="2dp"
        android:maxHeight="500dp"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_height="450dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Password"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#54AF3A"
            android:id="@+id/setPasswordID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/dialogView"
            app:layout_constraintTop_toBottomOf="@id/setPasswordID"
            android:orientation="vertical"
            android:weightSum="5"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="number"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:hint="Type new Password {only numbers}"
                android:id="@+id/password1"
                android:background="@drawable/bg_for_edit_text"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:hint="Confirm Password"               android:id="@+id/password2"
                android:inputType="number"
                android:background="@drawable/bg_for_edit_text"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password mismatch"
                android:layout_weight="0.02"
                android:visibility="gone"
                android:id="@+id/wpom"
                android:layout_margin="10dp"
                android:textColor="#9F1818"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:hint="Type Secondary Password {only numbers}"
                android:id="@+id/secondarypassword1"
                android:inputType="number"
                android:background="@drawable/bg_for_edit_text"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hint="confirm Secondary Password {only numbers}"
                android:id="@+id/secondarypassword2"
                android:inputType="number"
                android:background="@drawable/bg_for_edit_text"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondary Password mismatch"
                android:layout_weight="0.02"
                android:visibility="gone"
                android:id="@+id/wspom"
                android:layout_margin="10dp"
                android:textColor="#9F1818"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/set"
                android:text="Set"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25dp"
                android:background="@drawable/bg_for_btn"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogView2"
        android:background="@drawable/round_cornors"
        android:layout_width="0dp"
        android:elevation="2dp"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_height="450dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#54AF3A"
            android:id="@+id/ChangePasswordID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/dialogView2"
            app:layout_constraintTop_toBottomOf="@id/ChangePasswordID"
            android:orientation="vertical"
            android:weightSum="5"
            >
            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:hint="Type secondary Password"
                android:id="@+id/secondarypassword"
                android:background="@drawable/bg_for_edit_text"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wrong Secondary Password"
                android:layout_weight="0.02"
                android:visibility="gone"
                android:id="@+id/wSp"
                android:layout_margin="10dp"
                android:textColor="#9F1818"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:hint="Type new Password {only numbers}"
                android:id="@+id/changepassword1"
                android:inputType="number"
                android:background="@drawable/bg_for_edit_text"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:hint="Confirm {only numbers}"
                android:id="@+id/changepassword2"
                android:inputType="number"
                android:background="@drawable/bg_for_edit_text"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password mismatch"
                android:visibility="gone"
                android:layout_weight="0.02"
                android:id="@+id/wp"
                android:layout_margin="10dp"
                android:textColor="#9F1818"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Change"
                android:id="@+id/change"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25dp"
                android:background="@drawable/bg_for_btn"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Or you can ask us to resolve this problem"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/orange"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:padding="5sp"
        android:gravity="right|bottom"
        android:text=""
        android:textColor="@color/white"
        app:autoSizeMaxTextSize="80sp"
        app:autoSizeMinTextSize="20sp"
        app:autoSizeStepGranularity="20sp"
        android:maxLength="15"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="AC"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/black"
                android:background="@drawable/roundcornorforgray"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/AC"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="C"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/black"
                android:background="@drawable/roundcornorforgray"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/clr"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="%"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/black"
                android:background="@drawable/roundcornorforgray"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/module"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="/"
                android:gravity="center"
                android:layout_margin="@dimen/margin"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/roundcornorfororange"
                android:textSize="@dimen/textsize"
                android:layout_weight="1"
                android:id="@+id/devidedby"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/white"
                android:background="@drawable/backgroundfordarkgray"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/i7"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/white"
                android:background="@drawable/backgroundfordarkgray"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/i8"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/white"
                android:background="@drawable/backgroundfordarkgray"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/i9"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="X"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="@dimen/margin"
                android:textAlignment="center"
                android:background="@drawable/roundcornorfororange"
                android:textSize="@dimen/textsize"
                android:layout_weight="1"
                android:id="@+id/multiply"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/white"
                android:background="@drawable/backgroundfordarkgray"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/i4"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/white"
                android:background="@drawable/backgroundfordarkgray"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/i5"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/white"
                android:background="@drawable/backgroundfordarkgray"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/i6"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="_"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingBottom="30dp"
                android:layout_margin="@dimen/margin"
                android:textAlignment="center"
                android:background="@drawable/roundcornorfororange"
                android:textSize="@dimen/textsize"
                android:layout_weight="1"
                android:id="@+id/subtraction"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/white"
                android:background="@drawable/backgroundfordarkgray"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/i1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/white"
                android:background="@drawable/backgroundfordarkgray"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/i2"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/white"
                android:background="@drawable/backgroundfordarkgray"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/i3"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="@dimen/margin"
                android:textAlignment="center"
                android:background="@drawable/roundcornorfororange"
                android:textSize="@dimen/textsize"
                android:layout_weight="1"
                android:id="@+id/addition"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/white"
                android:background="@drawable/backgroundfordarkgray"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:layout_weight="2"
                android:id="@+id/i0"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="."
                android:layout_margin="@dimen/margin"
                android:textColor="@color/white"
                android:background="@drawable/backgroundfordarkgray"
                android:textAlignment="center"
                android:textSize="@dimen/textsize"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/idot"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="="
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="@dimen/margin"
                android:textAlignment="center"
                android:background="@drawable/roundcornorfororange"
                android:textSize="@dimen/textsize"
                android:layout_weight="1"
                android:id="@+id/equalto"
                />

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>